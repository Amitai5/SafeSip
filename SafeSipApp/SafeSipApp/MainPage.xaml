<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="SafeSipApp.MainPage"
             Title="MainPage">
    <StackLayout Spacing="0" Loaded="VerticalStackLayout_Loaded">

        <HorizontalStackLayout VerticalOptions="Start" HorizontalOptions="Center" Spacing="25" Padding="0,25,0,0">
            <Label Text="Status: " HorizontalOptions="Start" FontSize="32" />

            <VerticalStackLayout>
                <Image x:Name="StatusIcon" Source="inactive_icon.png" HeightRequest="50" HorizontalOptions="End" />
                <Label x:Name="StatusLabel" Text="(Inactive)" HorizontalOptions="Start" FontSize="16" />
            </VerticalStackLayout>
        </HorizontalStackLayout>

        <VerticalStackLayout VerticalOptions="CenterAndExpand">
            <Button x:Name="StatusToggle" HeightRequest="250" WidthRequest="250" FontSize="32"
                FontAttributes="Bold" TextColor="White" BackgroundColor="Green" Text="Activate" Clicked="StatusToggle_Clicked" />

            <Label HorizontalTextAlignment="Center"
               Text="You can also tap to activate/deactivate the coaster."
               TextColor="#f7f7ff"
               FontSize="16" 
               Margin="40,5" />
        </VerticalStackLayout>


    </StackLayout>
</ContentPage>